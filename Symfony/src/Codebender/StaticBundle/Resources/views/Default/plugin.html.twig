                    if (navigator.userAgent.toLowerCase().indexOf('chrome') != -1) {
                        version = document.getElementById('plugin0').version;
                        if (version>= "1.5.3") {
                            $("#mca").alert('close');
                        }
                    }else{
                        $("#mca").alert('close');
                    }
                </script>
                <ul>
                    <li>The Codebender extension is available in the Chrome Store. <a onclick='chrome.webstore.install()'>Add
